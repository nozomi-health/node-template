{
  "name": "node-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start:dev": "pm2 start ecosystem.config.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "db:start": "docker-compose -p node-template -f docker/docker-compose.yml --env-file docker/.env up",
    "db:start:prod": "docker-compose -p node-template -f docker/docker-compose.yml --env-file docker/env.prod up",
    "db:migrate": "node ./db/migrate.js",
    "db:migrate:prod": "MODE=production node ./db/migrate.js",
    "lint": "eslint ."
  },
  "private": true,
  "workspaces": [
    "test-service",
    "integration-test-service"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remdev-studio/node-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^8.0.1",
    "pm2": "^5.2.0",
    "shipit-cli": "^5.3.0",
    "shipit-deploy": "^5.3.0",
    "shipit-shared": "^4.4.2"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.0",
    "pg": "^8.7.3",
    "postgres-migrations": "^5.3.0",
    "uuid": "^8.3.2"
  }
