{
  "name": "node-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start:dev": "pm2 start ecosystem.config.js",
    "db:start:dev": "TARGET=dev docker-compose -f docker-compose.yml --env-file ./packages/db/.env up postgresql",
    "db:migrate:dev": "node ./packages/db/migrate.js",
    "db:migrate:staging": "MODE=staging node ./packages/db/migrate.js",
    "db:migrate:prod": "MODE=production node ./packages/db/migrate.js",
    "docker-up:dev": "TARGET=dev docker-compose -f docker-compose.yml --env-file ./packages/db/.env up",
    "docker-up:staging": "TARGET=staging docker-compose -f docker-compose.yml up -d",
    "docker-up:prod": "TARGET=prod docker-compose -f docker-compose.yml up -d",
    "prepare": "husky install && echo 'PATH=$PATH:'$PATH >> .husky/_/husky.sh",
    "lint": "eslint ."
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remdev-studio/node-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "pm2": "^5.3.0"
  }
}
